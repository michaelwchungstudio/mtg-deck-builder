<% if user_signed_in?%>
	<div> Your decks: </div>
	<% if @decks.length != 0%>
		<% for deck in @decks %>
			<% if deck.user_id == current_user.id %>
				<div class="card-image card-back"></div>
				<div><%= deck.name %></div>

				<a href="/users/<%= deck.user_id %>/decks/<%= deck.id %>/edit/1">Edit this deck</a>
			<% end %>
		<% end %>

	<% else %>
		<div>No decks currently made.</div>
		<div><%= link_to "Click here to make a new deck", new_user_deck_path(current_user) %></div>
	<% end %>

<% end %>


<div> </div>