<div class="bothForms">
  <h2>Forgot your password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "emailForms" %>
    </div>

    <div class="actions">
      <%= f.submit "Reset password instructions" %>
    </div>
  <% end %>
  <hr>
  
  <%= render "devise/shared/links" %>

</div>
